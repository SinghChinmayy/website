---
/**
 * NewsletterSignup Component
 * 
 * A clean, simple newsletter signup form that encourages users to subscribe.
 * Currently serves as a UI implementation that can be connected to a provider later.
 */
---

<div class="newsletter-signup">
  <div class="newsletter-content">
    <div class="newsletter-text">
      <span class="newsletter-label">Subscribe to updates</span>
      <p class="newsletter-sub">Get insights on software architecture and engineering leadership.</p>
    </div>
    
    <form class="signup-form" onsubmit="event.preventDefault(); alert('Thanks for subscribing! (This is a demo)');">
      <div class="input-group">
        <input 
          type="email" 
          placeholder="your@email.com" 
          aria-label="Email address"
          required
        />
        <button type="submit" aria-label="Subscribe">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="22" y1="2" x2="11" y2="13"></line><polygon points="22 2 15 22 11 13 2 9 22 2"></polygon></svg>
        </button>
      </div>
    </form>
  </div>
</div>

<style>
  .newsletter-signup {
    padding-bottom: 2rem;
    margin-bottom: 2rem;
    border-bottom: 1px solid var(--color-border);
  }

  .newsletter-content {
    max-width: 1100px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
  }

  .newsletter-text {
    flex: 1;
    max-width: 500px;
  }

  .newsletter-label {
    display: block;
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 0.25rem;
  }

  .newsletter-sub {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    line-height: 1.5;
    margin: 0;
  }

  .signup-form {
    flex-shrink: 0;
    width: 100%;
    max-width: 320px;
  }

  .input-group {
    display: flex;
    gap: 0.5rem;
    position: relative;
  }

  input[type="email"] {
    width: 100%;
    padding: 0.625rem 2.75rem 0.625rem 0.875rem;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 6px;
    color: var(--color-text);
    font-size: 0.875rem;
    transition: all 0.2s ease;
  }

  input[type="email"]:focus {
    outline: none;
    border-color: var(--color-text-muted);
    background: var(--color-bg);
  }

  button {
    position: absolute;
    right: 4px;
    top: 4px;
    bottom: 4px;
    padding: 0 0.5rem;
    background: transparent;
    border: none;
    color: var(--color-text-muted);
    cursor: pointer;
    transition: color 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  button:hover {
    color: var(--color-text);
  }

  button svg {
    width: 16px;
    height: 16px;
  }

  @media (max-width: 768px) {
    .newsletter-content {
      flex-direction: column;
      align-items: stretch;
      gap: 1.5rem;
    }
    
    .newsletter-text {
      max-width: 100%;
    }

    .signup-form {
      max-width: 100%;
    }
  }
</style>
