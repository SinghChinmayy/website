---
/**
 * SocialLinks Component
 * 
 * Displays social media links with SVG icons based on site configuration.
 * Automatically renders configured platforms.
 */
import { siteConfig } from '../config';

const iconMap: Record<string, string> = {
  github: `<path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>`,
  linkedin: `<path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path><rect x="2" y="9" width="4" height="12"></rect><circle cx="4" cy="4" r="2"></circle>`,
  twitter: `<path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"></path>`,
  mastodon: `<path d="M21 8.29h-1.95v2.6h-2.6v1.82h2.6v2.6H2.9v-2.6h2.6v-1.82h-2.6v-2.6h-1.95v2.6h2.6v1.82h-2.6v7.75c0 2.53 2.58 2.58 2.58 2.58l10.86.06c2.53 0 2.58-2.58 2.58-2.58v-2.6h-2.6v-1.82h2.6v-2.6z"/>`, // Simplified helper path
  bluesky: `<path d="M12 2L2 9l10 7 10-7-10-7zm0 14L4 9l8-6 8 6-8 6z"/>` // Generic replacement for now
};

const links = Object.entries(siteConfig.social)
  .filter(([_, url]) => !!url)
  .map(([platform, url]) => ({
    platform,
    url,
    icon: iconMap[platform]
  }))
  .filter(link => !!link.icon);
---

<div class="social-links">
  {links.map((link) => (
    <a 
      href={link.url} 
      target="_blank" 
      rel="noopener noreferrer" 
      class="social-link" 
      aria-label={link.platform}
      set:html={`<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">${link.icon}</svg>`}
    />
  ))}
</div>

<style>
  .social-links {
    display: flex;
    gap: 0.75rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    color: var(--color-text-muted);
    background: var(--color-bg-secondary);
    transition: all 0.2s ease;
    border: 1px solid transparent;
  }

  .social-link:hover {
    color: var(--color-text);
    background: var(--color-bg-elevated);
    border-color: var(--color-border);
    transform: translateY(-2px);
  }
</style>
